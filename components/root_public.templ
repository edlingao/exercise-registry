package components

type RootPublicViewModel struct {
  Title string
  Error error
}

templ RootPublic(vm RootPublicViewModel) {
  <!DOCTYPE html>
  <html>
    <head>
      <title>Index</title>
      <link rel="stylesheet" href="/assets/styles.css" />
      <script src="/assets/htmx.min.js"></script>
    </head>
    <body>
      if vm.Error != nil {
        <div class="alert alert-error">{vm.Error.Error()}</div>
      }
  
      { children... }
    </body>
  </html>
}
